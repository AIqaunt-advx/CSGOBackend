# 应用基本配置
APP_NAME='DaoGO Backend'
APP_DESCRIPTION='CSGO Market Data Analysis Backend API'
APP_VERSION=1.0.0

# 服务器配置
HOST=127.0.0.1
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# MongoDB数据库配置
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=csgo_market
MONGODB_COLLECTION_MARKET_DATA=market_data
MONGODB_COLLECTION_TREND_DATA=trend_data

# LLM服务器配置
LLM_API_BASE_URL=http://localhost:8001
LLM_API_KEY=your-llm-api-key-here
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# 爬虫配置
CRAWLER_INTERVAL=3600
CRAWLER_DATA_RETENTION_HOURS=168
CRAWLER_BATCH_SIZE=100
CRAWLER_DELAY_BETWEEN_REQUESTS=1.0

# 数据分析配置
ANALYSIS_WINDOW_HOURS=7
PREDICTION_CONFIDENCE_THRESHOLD=0.8

# 安全配置
SECRET_KEY=your-secret-key-change-this-in-production
