# 应用基本配置
APP_NAME='DaoGO Backend'
APP_DESCRIPTION='CSGO Market Data Analysis Backend API'
APP_VERSION=1.0.0

# 服务器配置
HOST=127.0.0.1
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# MongoDB数据库配置
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=csgo_market
MONGODB_COLLECTION_MARKET_DATA=market_data

# 预测API配置
PREDICT_API_URL=http://localhost:8000/predict

# 爬虫配置 - 调整请求频率避免被限制
CRAWLER_INTERVAL=7200
CRAWLER_DATA_RETENTION_HOURS=168
CRAWLER_BATCH_SIZE=10
CRAWLER_DELAY_BETWEEN_REQUESTS=5.0

# 数据分析配置
ANALYSIS_WINDOW_HOURS=7
PREDICTION_CONFIDENCE_THRESHOLD=0.8

# 安全配置
SECRET_KEY=your-secret-key-change-this-in-production
